{
  "name": "mcp-lsp-driver",
  "version": "0.1.0",
  "description": "MCP LSP Driver for IDE plugins to easily expose LSP features via an MCP server.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist/**/*.js", "dist/**/*.d.ts", "README.md", "LICENSE"],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "prepublishOnly": "npm run build"
  },
  "keywords": ["mcp", "lsp", "language-server", "ide", "vscode", "jetbrains"],
  "author": "EFLKumo",
  "license": "MIT",
  "dependencies": {
    "zod": "^4.3.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OpticLM/mcp-lspdriver-ts"
  },
  "peerDependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@types/node": "^22.19.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
